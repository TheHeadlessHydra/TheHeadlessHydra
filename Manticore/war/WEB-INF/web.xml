<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Manticore</servlet-name>
		<servlet-class>theheadlesshydra.manticore.ManticoreServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>Guestbook</servlet-name>
		<servlet-class>theheadlesshydra.manticore.GuestbookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Test</servlet-name>
		<servlet-class>theheadlesshydra.manticore.TestServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>theheadlesshydra.manticore.SignGuestbookServlet</servlet-class>
    </servlet>
	
	<servlet-mapping>
		<servlet-name>Manticore</servlet-name>
		<url-pattern>/manticore</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Guestbook</servlet-name>
		<url-pattern>/guestbook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Test</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    
	<welcome-file-list>
		<welcome-file>guestbook.jsp</welcome-file>
	</welcome-file-list>
	
	
</web-app>
